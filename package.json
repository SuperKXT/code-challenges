{
	"name": "playground",
	"version": "1.0.0",
	"license": "MIT",
	"author": "Saad Khan",
	"type": "module",
	"scripts": {
		"lint": "eslint . --max-warnings=0 --fix --report-unused-disable-directives && pnpm format && pnpm spellcheck",
		"format": "prettier --write --log-level silent .",
		"test": "vitest watch",
		"test-ui": "vitest --ui",
		"tsc": "tsc",
		"typecheck": "vitest typecheck",
		"wordle": "tsx ./scripts/wordle/wordle.ts",
		"kebab-rename": "tsx ./scripts/recursive-rename/recursive-rename.ts",
		"md-csv": "tsx ./scripts/md-links-to-csv/script.ts",
		"spellcheck": "cspell . --quiet",
		"diag": "tsc --extendedDiagnostics",
		"trace": "tsc --generateTrace ./trace && npx @typescript/analyze-trace trace"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@type-challenges/utils": "^0.1.1",
		"@types/eslint": "^8.56.5",
		"@types/node": "^20.11.24",
		"@types/prompt": "^1.1.8",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@typescript/analyze-trace": "^0.10.1",
		"@vitest/coverage-v8": "^1.3.1",
		"@vitest/ui": "^1.3.1",
		"cspell": "^8.5.0",
		"eslint": "^8.57.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-only-warn": "^1.1.0",
		"eslint-plugin-unused-imports": "^3.1.0",
		"eslint-plugin-vitest": "^0.3.22",
		"prettier": "^3.2.5",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3",
		"vitest": "^1.3.1"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"dayjs": "^1.11.10",
		"minimist-lite": "^2.2.1",
		"prompt": "^1.3.0",
		"zod": "^3.22.4"
	}
}
