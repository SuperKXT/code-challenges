{
	"env": {
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"plugin:jest/all"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"jest"
	],
	"rules": {
		"import/extensions": [
			"warn",
			{
				".ts": "never",
				".tsx": "never"
			}
		],
		"import/order": [
			"error",
			{
				"newlines-between": "always",
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": true
				}
			}
		],
		"import/prefer-default-export": "off"
	},
	"settings": {
		"jest": {
			"version": 26
		}
	}
}